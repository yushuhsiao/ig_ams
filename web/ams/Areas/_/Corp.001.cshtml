@{
    Layout = "../Layout-ng.cshtml";
    ViewBag.Title = "Corp";
}
@section head {
    @Bundles.RenderStyles(this)
    @Bundles.RenderScripts(this)
    <script type="text/javascript">
        var app = ng_app('app').controller('main', function ($scope) {
            window.$scope = $scope;
            angular.element(document).ready(function () {
                var source = new $.jqx.dataAdapter({
                    dataType: 'json', type: 'post', root: "", record: "", autoBind: true,
                    id: 'CorpID',
                    url: '@(Url.GetActionUrlContent<ams.Controllers.CorpApiController>("list"))',
                    datafields: [
                        { name: 'CorpID', type: 'int' },
                        { name: 'CorpACNT', type: 'string' },
                    ]
                }, {
                    downloadComplete: function (data, status, xhr) { },
                    loadComplete: function (data) { },
                    loadError: function (xhr, status, error) { }
                })
                //@(new jqxGrid { })
                var grid = $("#grid").jqxInit('jqxGrid', {
                    width: '100%', height: '100%',
                    source: source,
                    columns: [
                        { text: '@lang["CorpID"]', datafield: 'CorpID', width: 100 },
                        { text: '@lang["CorpACNT"]', datafield: 'CorpACNT', width: 150 },
                    ],
                    pageable: true,
                    //autoheight: true,
                    sortable: true,
                    altrows: true,
                    enabletooltips: true,
                    editable: true,
                    selectionmode: 'multiplecellsadvanced',
                });
            });
        });
    </script>
}
<div id="grid"></div>



