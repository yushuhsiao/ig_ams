@model GameControl.Models.DST

@{
    ViewBag.Title = "DSTEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/table.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>日光節約時間設定</h2>
        <!--表格開始-->
        <div class="CSSTable">
            <table>
                <tr>
                    <td style="width:10%" colspan="2">
                        @Html.DisplayFor(model => model.Game)
                    </td>

                </tr>
                <tr>
                    <td style="width:10%">
                        項目
                    </td>
                    <td style="width:80%">
                        時間
                    </td>
                </tr>
                <tr>
                    <td>
                        開始
                    </td>
                    <td>
                        @Html.EditorFor(model => model.DSTBegin, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DSTBegin, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        結束
                    </td>
                    <td>
                        @Html.EditorFor(model => model.DSTEnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DSTEnd, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </div>
        <!--表格結束-->
        <br />
        <button type="submit" class="btn btn-info btn-lg" value="儲存">儲存</button>
        <input class="btn btn-warning btn-lg" type="button" value="回前頁" onclick="location.href='@Url.Action("DSTIndex", "URL")'" />
    </div>
}



