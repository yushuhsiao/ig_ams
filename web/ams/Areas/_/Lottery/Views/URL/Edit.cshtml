@model GameControl.Models.URL

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/table.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>來源編輯</h2>
        <!--表格開始-->

        <div class="CSSTable">
            <table>
                <tr>
                    <td style="width:10%">
                        項目
                    </td>
                    <td style="width:80%">
                        屬性
                    </td>
                </tr>
                <tr>
                    <td>
                        遊戲類型
                    </td>
                    <td>
                        @Html.DropDownList("GameType", (SelectList)ViewBag.GameType, null, new { @Location = "GameType" })
                        @Html.ValidationMessageFor(model => model.GameType, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => Model.SID, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        開獎地區
                    </td>
                    <td>
                        @Html.DropDownList("Location")
                        @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>連結</td>
                    <td>
                        @Html.EditorFor(model => model.Url1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Url1, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        狀態
                    </td>
                    <td>
                        開啟
                        @Html.RadioButtonFor(model => model.Status, "1")
                        關閉
                        @Html.RadioButtonFor(model => model.Status, "0")
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        排序
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Sort, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sort, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        讀取時間
                    </td>
                    <td>
                        @Html.EditorFor(model => model.LoadTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoadTime, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        讀取失敗次數上限
                    </td>
                    <td>
                        @Html.EditorFor(model => model.FailCount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FailCount, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </div>
        @if (ViewBag.Error != null)
        {
            @Html.Label("info", (string)ViewBag.Error, new { @class = "text-success", @style = "font-size:26px;" });
        }

        <!--表格結束-->
        <br />
        <button type="submit" class="btn btn-info btn-lg" value="儲存">儲存</button>
        <input class="btn btn-warning btn-lg" type="button" value="回前頁" onclick="location.href='@Url.Action("Index", "URL")'" />
    </div>

}

