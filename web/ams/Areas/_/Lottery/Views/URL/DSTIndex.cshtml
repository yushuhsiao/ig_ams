@model List<GameControl.Models.DST>

@{
    ViewBag.Title = "DSTIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="services">
    <h2>日光節約時間設定</h2>
    <div class="container">
        <div class="CSSTableGenerator">
            <table class="table">
                <tr>
                    <td>遊戲名稱</td>
                    <td>開始</td>
                    <td>結束</td>
                    <td>最後更新時間</td>
                    <td>最後更新者</td>
                    <td colspan="2" style="width:6%">選項</td>
                </tr>

                @foreach (var a in this.Model)
                {

                    <tr>
                        <td>@a.Game</td>
                        <td>@a.DSTBegin</td>
                        <td>@a.DSTEnd</td>
                        <td>@a.UpdateTime</td>
                        <td>@a.UpdateUser</td>
                        <td>
                            @Html.ActionLink(
               "編輯", "DSTEdit", new { SID = a.SID }, new { @class = "btn btn-info" }
               )
                        </td>
                        <td>
                            @Html.ActionLink(
               "刪除", "DSTDelete", new { SID = a.SID }, new { @class = "btn btn-danger" }
               )
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
