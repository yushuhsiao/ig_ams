@model GameControl.Models.Pc_Keno_Sample

@{
    ViewBag.Title = "PCCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/table.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="CSSTable">
            <table>
                <tr>
                    <td style="width:10%">
                        項目
                    </td>
                    <td style="width:80%">
                        屬性
                    </td>
                </tr>
                <tr>
                    <td>
                        盤口名稱
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Dish, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Dish, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </div>
        <br />
        <button type="submit" class="btn btn-info btn-lg" value="新增">新增</button>
        <input class="btn btn-warning btn-lg" type="button" value="回首頁" onclick="location.href='@Url.Action("PCIndex", "URL")'" />
    </div>
}


