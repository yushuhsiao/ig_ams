@model IG.Lobby.TG.Models.ReplayTexasHoldemViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TexasHoldem Replay</title>
    <link href="~/assets/css/normalize.min.css" rel="stylesheet" />
    <link href="~/assets/css/site-game.css" rel="stylesheet" />
    <script src="~/assets/js/jquery-2.2.4.min.js"></script>
    <script src="~/assets/swfobject/swfobject.min.js"></script>
    <script src="~/assets/js/site-game.js"></script>
</head>
<body>
    <div class="game-wrapper">
        <div id="game"></div>
    </div>
    <script>
        function startGame() {
            if (!isFlashPlayerInstalled()) {
                window.location = 'https://get.adobe.com/tw/flashplayer';
                return;
            }

            var swfUrl = '@String.Format("{0}/games/TEXASHOLDEMVIDEOREPLAY/Main.swf", ConfigHelper.AssetServerUrl)';
            var flashvars = {
                replayData: '@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))'
            };

            embedSwf(swfUrl, flashvars, 'game', '100%', '100%');
        }

        $(document).ready(function () {
            startGame();
        });
    </script>
</body>
</html>
